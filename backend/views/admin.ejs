<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Promotions Manager</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h2>Promotions Admin Panel</h2>
        <a href="/logout" class="button logout-button">Logout</a>

        <h3>Add New Promotion</h3>
        <form action="/admin/add" method="POST" class="add-form" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title_ru">Title (Russian):</label>
                <input type="text" id="title_ru" name="title_ru" required>
            </div>
            <div class="form-group">
                <label for="description_ru">Description (Russian):</label>
                <textarea id="description_ru" name="description_ru"></textarea>
            </div>
            <div class="form-group">
                <label for="title_en">Title (English):</label>
                <input type="text" id="title_en" name="title_en">
            </div>
            <div class="form-group">
                <label for="description_en">Description (English):</label>
                <textarea id="description_en" name="description_en"></textarea>
            </div>
            <div class="form-group">
                <label for="title_ka">Title (Georgian):</label>
                <input type="text" id="title_ka" name="title_ka">
            </div>
            <div class="form-group">
                <label for="description_ka">Description (Georgian):</label>
                <textarea id="description_ka" name="description_ka"></textarea>
            </div>
            <div class="form-group">
                <label for="image">Upload Image (SVG or PNG):</label>
                <input type="file" id="image" name="image" accept=".svg, .png">
            </div>
            <div class="form-group">
                <label for="image_src_url">Or Image Source (URL):</label>
                <input type="text" id="image_src_url" name="image_src_url">
            </div>
            <button type="submit">Add Promotion</button>
        </form>

        <h3>Existing Promotions</h3>
        <% if (promotions.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title (RU)</th>
                        <th>Description (RU)</th>
                        <th>Image</th>
                        <th>Active</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% promotions.forEach(promo => { %>
                        <tr>
                            <td><%= promo.id %></td>
                            <td><%= promo.title_ru %></td>
                            <td><%= promo.description_ru %></td>
                            <td>
                                <% if (promo.image_src) { %>
                                    <img src="<%= promo.image_src %>" alt="<%= promo.title %>" class="promo-img-thumb">
                                <% } else { %>
                                    No Image
                                <% } %>
                            </td>
                            <td><%= promo.is_active ? 'Yes' : 'No' %></td>
                            <td class="actions">
                                <a href="/admin/edit/<%= promo.id %>" class="button edit-button">Edit</a>
                                <form action="/admin/delete/<%= promo.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this promotion?');">
                                    <button type="submit" class="button delete-button">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>No promotions found. Add one above!</p>
        <% } %>
    </div>
</body>
</html>
